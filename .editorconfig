# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false  # Markdown uses trailing spaces for line breaks

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
